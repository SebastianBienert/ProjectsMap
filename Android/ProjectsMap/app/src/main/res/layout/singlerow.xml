<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/usericon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/usericon" />

    <TextView
        android:id="@+id/DeveloperName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/usericon"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/rowData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DeveloperName"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/DeveloperName"
        android:text="Row data"
        android:textColor="#000000"
        android:textSize="20sp" />


    <Button
        android:id="@+id/buttonShowOnMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowData"
        android:layout_alignParentStart="true"

        android:text="WskaÅ¼ na mapie" />

    <Button
        android:id="@+id/buttonShowMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usericon"
        android:layout_alignStart="@+id/usericon"
        android:layout_below="@+id/usericon"
        android:layout_marginTop="17dp"
        android:background="@drawable/arrowdown"
        />

</RelativeLayout>