<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.projectsmap.MainActivity">

    <Button
        android:id="@+id/buttonShowFloor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonSaveTest"
        android:layout_alignStart="@+id/buttonSaveTest"
        android:layout_below="@+id/buttonSaveTest"
        android:width="200dp"
        android:text="Wyświetl piętro" />

    <Button
        android:id="@+id/buttonShowMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonShowFloor"
        android:layout_alignStart="@+id/buttonShowFloor"
        android:layout_below="@+id/buttonSaveTest"
        android:layout_marginTop="57dp"
        android:width="200dp"
        android:text="Wyświetl mape" />

    <Button
        android:id="@+id/buttonSearchDevelopers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:width="200dp"
        android:text="Wyszukaj pracownika" />

    <Button
        android:id="@+id/buttonSaveTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonSearchDevelopers"
        android:layout_alignStart="@+id/buttonSearchDevelopers"
        android:layout_below="@+id/buttonSearchDevelopers"
        android:width="200dp"
        android:text="Zapis do pliku" />

    <Button
        android:id="@+id/buttonSearchProjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSaveTest"
        android:layout_alignEnd="@+id/buttonSearchDevelopers"
        android:layout_alignLeft="@+id/buttonSearchDevelopers"
        android:layout_alignRight="@+id/buttonSearchDevelopers"
        android:layout_alignStart="@+id/buttonSearchDevelopers"
        android:layout_marginBottom="51dp"
        android:text="Wyszukaj projekty" />

    <Switch
        android:id="@+id/switchOnlineWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:width="150dp"
        android:height="50dp"
        android:showText="true"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="Praca online"
        android:textAlignment="center"
        android:textOff="Off"
        android:textOn="On"
        android:textStyle="bold" />

    <!-- android:layout_alignLeft="@+id/buttonPaint"
    android:layout_alignStart="@+id/buttonPaint"
    android:layout_below="@+id/buttonPaint"-->

</RelativeLayout>
